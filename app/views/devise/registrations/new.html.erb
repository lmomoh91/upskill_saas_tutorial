<div class="container">
  <div class="row"></div>
    <div class="col-md-4 col-md-offset-4">
      
      <div class= "text-center">
        <% if params[:plan] == '2' %>
          <h1>Pro Account</h1>
          <p>Sign up for the Pro account and get access to the community and contact information!<p>
        <% else %>
          <h1>Basic Account</h1>
          <p>Sign up for Basic Account for free and basic access to community.<p>
        <% end %>
      </div>
      
      <div class="well">
        <h2 class= "text-center">Sign up!</h2>
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>
          
          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>